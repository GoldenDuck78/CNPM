<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the solid color for the background -->
    <solid android:color="#FF5722" /> <!-- Change this color to whatever you need -->

    <!-- Define the corners radius for rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape>
